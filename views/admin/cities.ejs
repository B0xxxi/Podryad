<!DOCTYPE html>
<html lang="ru" data-theme>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Список городов</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/common.css">
  <link rel="stylesheet" href="/css/admin.css">
  <link rel="stylesheet" href="/css/custom-buttons.css">
</head>
<body>
  <div class="main-container">
    <h1 class="admin-container__title">Список городов</h1>
    <% if (cities.length) { %>
      <table class="admin-table">
        <thead>
          <tr>
            <th class="links admin-table__header-cell">Название</th>
            <th class="admin-table__header-cell">DDX</th>
            <th class="admin-table__header-cell">МЮЗ</th>
            <th class="admin-table__header-cell">Действия</th>
          </tr>
        </thead>
        <tbody>
          <% cities.forEach(city => { %>
            <tr>
              <td class="admin-table__body-cell"><a href="/city/<%= city.id %>"><%= city.name %></a></td>
              <td class="admin-table__body-cell"><%= city.ddx ? 'Да' : 'Нет' %></td>
              <td class="admin-table__body-cell"><%= city.myuz ? 'Да' : 'Нет' %></td>
              <td class="admin-table__body-cell">
                <form action="/admin/cities/<%= city.id %>/delete" method="POST" onsubmit="return confirm('Удалить город <%= city.name %>?');">
                  <button type="submit" class="button button--primary button--light">Удалить</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p>Нет добавленных городов.</p>
    <% } %>
    <div class="links">
      <a href="/admin" class="button button--secondary">Назад</a>
    </div>
    <button id="theme-toggle" class="button button--secondary">Переключить тему</button>
  </div>
  <script src="/js/theme.js"></script>
</body>
</html> 